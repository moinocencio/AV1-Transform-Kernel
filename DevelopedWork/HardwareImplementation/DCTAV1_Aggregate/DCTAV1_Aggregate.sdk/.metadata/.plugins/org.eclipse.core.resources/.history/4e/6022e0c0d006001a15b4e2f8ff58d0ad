#include "DCTs.h"

void disable_DCTs() {
	unsigned int t_reg = Xil_In32(DCTSBASEADDR + DATA64OFF);
	Xil_Out32(DCTSBASEADDR + DATA64OFF, (t_reg & 0xFFFFFFF7));
}

void enable_DCTs() {
	unsigned int t_reg = Xil_In32(DCTSBASEADDR + DATA64OFF);
	Xil_Out32(DCTSBASEADDR + DATA64OFF, (t_reg | 0x8));
}

void reset_DCTs() {
	unsigned int t_reg = Xil_In32(DCTSBASEADDR + DATA64OFF);
	Xil_Out32(DCTSBASEADDR + DATA64OFF, (t_reg | 0x10));
	Xil_Out32(DCTSBASEADDR + DATA64OFF, (t_reg & 0xFFFFFFEF));
}
